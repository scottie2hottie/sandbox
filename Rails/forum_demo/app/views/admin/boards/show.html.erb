<p id="notice"><%= notice %></p>

<p>
  <b>板块名：</b>
  <%= @board.name %>
</p>
<h1>帖子列表：</h1>
<table>
  <tr>
    <th>标题</th>
    <th>内容</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @posts.each do |post|  %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= link_to "Show", board_post_path(@board, post) %></td>
      <td>
        <%= link_to "Edit", edit_admin_board_post_path(@board, post) %>
      </td>
      <td>
        <%= link_to "Delete", admin_board_post_path(@board, post), method: :delete, confirm: "Are you sure you want to delete this post?" %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to "发布新帖", new_admin_board_post_path(@board) %>
<%= link_to '编辑板块', edit_admin_board_path(@board) %> |
<%= link_to '返回', admin_boards_path %>
