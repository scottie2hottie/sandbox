<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>

<% if @post.excerpt_image %>
  <p>
    <%= image_tag(@post.excerpt_image.url(:medium)) %>
  </p>
<% end %>

<% if current_user && current_user == @post.user %>
  <%= link_to "Edit", edit_board_post_path(@board, @post) %>
<% end %>
<%= link_to "Back", board_posts_path(@board) %>
