<h1>List of posts:</h1>
<table>
  <tr>
    <td width="120">Title:</td>
    <td width="200">Content:</td>
    <td width="220">Created at:</td>
    <td >Actions:</td>
  </tr>
  <%= content_tag_for(:tr, @posts) do |post| %>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= post.created_at %></td>
    <td>
      <%= link_to "Show", post_path(post) %>
      <%= link_to "Edit", edit_post_path(post) %>
      <%= link_to "Delete", post_path(post), method: :delete, data: { confirm: "确定要删除这条博文吗？" } %>
    </td>
  <% end %>
</table>
